{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"src/**/*.ts",
		"src/**/*.json",
		"tailwind.config.*"
	],
	"exclude": [
		"src/**/__tests__/*"
	],
	"compilerOptions": {
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"composite": true,
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	}
}
